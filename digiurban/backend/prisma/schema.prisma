  nome String
  tipo String
  endereco String
  descricao String?
  coordenadas Json?
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("pontos_turisticos")
}

model EventoTuristico {
  id String @id @default(cuid())
  nome String
  dataInicio DateTime
  dataFim DateTime
  local String
  descricao String?
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("eventos_turisticos")
}

